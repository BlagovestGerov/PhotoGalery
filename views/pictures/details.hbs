<h1>Home Page</h1>

<fieldset>
    <legend>{{selectedPicture.title}}</legend>
    <p>{{selectedPicture.location}}</p>
    <img class="pictureImg" src="{{selectedPicture.image}}" alt="picture image">   
    <p>{{selectedPicture.description}}</p>
<div>
    {{#if currentUser}}
        <a  href="like/{{selectedPicture._id}}"><img class="likeBtn" src="/img/like-button-png-2.png" alt="like"></a>
       {{else}}
       <img class="likeBtn" src="/img/like-button-png-2.png" alt="like">
       {{/if}}
        <span>{{selectedPicture.prop}}</span>
            <p>{{selectedPicture.viewCounter }}</p>
        
</div>
    
</fieldset>


<h1>Comments</h1>
<br>
</br>

{{#each comments}}

<fieldset>
    <legend>
        <a href="/getDetails/{{this.creator}}"> <p>{{this.userName}}</p> </a>
    </legend>
    <p>{{this.userTitle}}</p>
    <p>{{this.userComment}}</p>
    <p>{{this.datePosted}}</p>
</fieldset>
{{/each}}



{{#if currentUser}}


<div class="login-page">
 
    <div class="form">
           <h1>Add Comment</h1>
            <br>
            </br>
        <form action="/comment/{{selectedPicture._id}}" method="POST" class="create-form">
            <input type="text" name='title' placeholder="Title" />
            <textarea name="comment" id="" cols="35" rows="10" placeholder="comment"></textarea>
            <br>
            <button type="submit">create</button>
        </form>
    </div>
</div>

{{/if}}


