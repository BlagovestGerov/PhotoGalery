<h1>Home Page</h1>

<fieldset>
    <legend>{{selectedPicture.title}}</legend>
    <p>{{selectedPicture.location}}</p>
    <img class="hotelImg" src="{{selectedPicture.image}}" alt="hotel image">   
    <p>{{selectedPicture.description}}</p>
<div>
        <a  href="like/{{selectedPicture._id}}"><img class="likeBtn" src="/img/like-button-png-2.png" alt="like"></a>
        <span>{{selectedPicture.prop}}</span>
</div>
    
</fieldset>

<div class="login-page">
    <div class="form">
        <form action="/comment/{{selectedPicture._id}}" method="POST" class="create-form">
            <input type="text" name='title' placeholder="Title" />
            <textarea name="comment" id="" cols="35" rows="10" placeholder="comment"></textarea>
            <br>
            <button type="submit">create</button>
        </form>
    </div>
</div>



{{#each comments}}
<fieldset>
    <legend>
        <p>{{this.userName}}</p>
    </legend>
    <p>{{this.userComment}}</p>
    <p>{{this.datePosted}}</p>
</fieldset>
{{/each}}